.application-content .item{overflow: hidden;margin-left: 32rpx;margin-top: 24rpx; width: 208rpx;height: 208rpx;border-radius: 10px;background-color: #fff;text-align: center;}
.application-content .item .icon{width: 80rpx;height: 80rpx;margin: 40rpx auto 0;}
.application-content .item .icon .img{width: 80rpx;height: 80rpx;}
.application-content .item .text{margin-top: 20rpx;font-size: 26rpx;color: rgb(102,102,102);}
