
.application{background-color: rgb(230,230,230);width: 100%;height: 100%;}
.application-notice{padding: 25rpx 24rpx;margin: 10rpx 24rpx 40rpx; display: -webkit-box; display: -webkit-flex; display: -ms-flexbox; display: flex; border-radius: 10rpx;background-color: #fff;}
