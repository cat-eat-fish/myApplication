
.reportingProcess{}
.reportingProcess{background-color: rgb(239,238,243);height: 100%;overflow: auto;}
.reportingProcess-form{margin: 20rpx 24rpx 50rpx;background-color: #fff;border-radius: 10px;padding: 20rpx 0;}
.reportingProcess-form .item{display: -webkit-box;display: -webkit-flex;display: -ms-flexbox;display: flex;padding: 20rpx 24rpx;border-bottom: 1px solid rgb(230,230,230);}
.reportingProcess-form .item:last-child{border: none;}
.reportingProcess-form .item .text{    width: 30%;font-size: 26rpx;color: rgb(51,51,51);}
.reportingProcess-form .item .field{font-size: 26rpx;color: rgb(102,102,102);margin-left: 10rpx;}
.reportingProcess-form .item .field.red{color: red;}
.reportingProcess-form .item .field.ra{display: -webkit-box;display: -webkit-flex;display: -ms-flexbox;display: flex;color: rgb(102,102,102);}
.reportingProcess-form .field.ra .group{display: -webkit-box;display: -webkit-flex;display: -ms-flexbox;display: flex;}
.reportingProcess-form .uni-list-cell {display: -webkit-box;display: -webkit-flex;display: -ms-flexbox;display: flex;}
.reportingProcess-form .uni-list-cell:nth-child(1),.uni-list-cell:nth-child(3),.uni-list-cell:nth-child(5){margin-left: 0;}
.reportingProcess-form .uni-list-cell:nth-child(2),.uni-list-cell:nth-child(4),.uni-list-cell:nth-child(6){margin-left: 0;}
.reportingProcess-form .uni-list-cell::after{height:0}
.reportingProcess-form .uni-list-cell-pd{padding: 0 30rpx 0 0;}
.reportingProcess-form .item.text{display: block;}
.reportingProcess-form .item .field.textarea{width: 100%;height: 90rpx;}
.reportingProcess .btns{display: -webkit-box;display: -webkit-flex;display: -ms-flexbox;display: flex;-webkit-box-pack: justify;-webkit-justify-content: space-between;-ms-flex-pack: justify;justify-content: space-between;margin: 60rpx 24rpx;}
.reportingProcess .btns button{width: 100%;}
.reportingProcess .upload{-webkit-box-flex:1;-webkit-flex:1;-ms-flex:1;flex:1;text-align: center;color: #FFFFFF;    width: 30px; /* Safari 5.1 - 6.0 */
	  background: -o-linear-gradient(rgb(255, 128, 31), rgb(255,191,67)); /* Opera 11.1 - 12.0 */ /* Firefox 3.6 - 15 */
	  background: -webkit-gradient(linear, left top, left bottom, from(rgb(255, 128, 31)), to(rgb(255,191,67)));
	  background: linear-gradient(rgb(255, 128, 31), rgb(255,191,67)); /* 标准的语法 */
}

