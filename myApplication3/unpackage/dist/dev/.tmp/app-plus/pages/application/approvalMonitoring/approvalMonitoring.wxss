.approvalMonitoring{background-color: rgb(239,238,243);height:100vh;overflow: auto;}


.approvalMonitoring .content-no{height: 100%; background-position: center;background-size: 40%;}
.approvalMonitoring .content-no .img{width: 400rpx;height: 400rpx;position: absolute;top: 0;bottom: 0;left: 0;right: 0;margin: 48% auto;}
.approvalMonitoring .content-no .text{position: absolute;top: 740rpx;bottom: 0;left: 0;right: 0;margin: auto;text-align: center;
	background-image: -webkit-linear-gradient(0deg, #cc5500, #ccbb00);
	  -webkit-background-clip: text;
	  -webkit-text-fill-color: transparent;
	  -webkit-animation: hue 60s infinite linear;
}
.approvalMonitoring .item{position: relative; margin: 30rpx 24rpx 0;border-radius: 10px;padding: 40rpx 24rpx;background-color: #FFFFFF;}
.approvalMonitoring .item-2,.approvalMonitoring .item-3,.approvalMonitoring .item-4,.approvalMonitoring .item-5{margin-top: 20rpx;}
.approvalMonitoring .item-5 .txt{font-size: 30rpx;color: rgb(248,54,0);}
.approvalMonitoring .operation{display: -webkit-box;display: -webkit-flex;display: -ms-flexbox;display: flex;-webkit-box-pack: justify;-webkit-justify-content: space-between;-ms-flex-pack: justify;justify-content: space-between; position: absolute;margin: 0 24rpx;bottom: -50rpx;left: 0;right: 0;padding: 10rpx 26rpx;border-radius: 20px;font-size: 24rpx;color: #FFFFFF; /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(rgb(255, 128, 31), rgb(255,191,67)); /* Opera 11.1 - 12.0 */ /* Firefox 3.6 - 15 */
  background: -webkit-gradient(linear, left top, left bottom, from(rgb(255, 128, 31)), to(rgb(255,191,67)));
  background: linear-gradient(rgb(255, 128, 31), rgb(255,191,67)); /* 标准的语法 */
}
.approvalMonitoring  .operation-i{position: relative;}
.operation-i::after{content:""; top: 14rpx; right:-12rpx; position: absolute;width: 1px;height: 26rpx;background-color: #FFFFFF;}
.operation-i:last-child::after{width: 0;}

